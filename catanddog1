pets = [2, "cats", 3, "dogs"]
# "I have 3 cats and 2 dogs."

# '+' method
print("I have " + str(pets[2]) + " " + pets[1] + " and " + str(pets[0]) + " " + pet[3] + ".")

# 'f-string'
print(f"I have {pets[2]} {pets[1]} and {pets[0]} {pets[3]}, ")

# '.format()'
print("I have {} {} and {} {}." .format(pets[2], pets[1], pets[0], pet[3]))

# 'format(*)' -argument unpacking (cool!!)
print("I have {2} {1} and {0} {3}." .format(*pets))
